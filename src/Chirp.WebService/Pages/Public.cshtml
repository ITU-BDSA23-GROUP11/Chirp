@page "/"
@attribute [AllowAnonymous]
@using Chirp.WebService.Extensions
@using Microsoft.AspNetCore.Authorization
@using Chirp.Infrastructure/Repositories/CheepRepository.cs
@model Chirp.WebService.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2> Public Timeline </h2>
    
    <partial name="Shared/_AddCheepForm"/>

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.AuthorName">@cheep.AuthorName</a>
                        </strong>
                        @cheep.Text
                        <small>&mdash; @cheep.Timestamp</small>
                        <partial name="Shared/_DeleteCheepForm" model="@cheep"/>
                        @{
                            if (Model.Follows.Contains(@cheep.AuthorEmail))
                            {
                                //Follows already -> unfollow
                                <partial name="Shared/UnfollowAuthorForm" model="@cheep"/>
                            }
                            else
                            {
                                <partial name="Shared/_FollowAuthorForm" model="@cheep"/>
                            }
                        }
                    </p>
                    
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
    <!--Pagination-->
    <div>
        @for (int i = 1; i <= Model.AmountOfPages; i++)
        {
            <a href="/?page=@i">@i</a>
        }
    </div>
</div>