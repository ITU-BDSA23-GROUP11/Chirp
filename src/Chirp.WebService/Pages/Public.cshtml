@page "/"
@attribute [AllowAnonymous]
@using Microsoft.AspNetCore.Authorization
@using Chirp.Infrastructure/Repositories/CheepRepository.cs
@model Chirp.WebService.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2> Public Timeline </h2>
    
    <partial name="Shared/_AddCheepForm"/>

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.AuthorName">@cheep.AuthorName</a>
                        </strong>
                        @cheep.Text
                        <small>&mdash; @cheep.Timestamp</small>
                           @if (User.Identity.Name.Equals(cheep.AuthorName))
                           {
                               <form asp-controller="Cheep" asp-action="Delete" method="post" style="display:inline;">
                                   <input type="hidden" name="cheepId" value="@cheep.CheepId"/>
                                   <input name="__RequestVerificationToken" type="hidden"/>
                                   @Html.AntiForgeryToken()
                                   <button type="submit" style="background:none;border:none;color: red;padding:0;margin-left: 10px;cursor:pointer">
                                       Delete
                                   </button>
                               </form>
                           }
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
    <!--Pagination-->
    <div>
        @for (int i = 1; i <= Model.AmountOfPages; i++)
        {
            <a href="/?page=@i">@i</a>
        }
    </div>
</div>