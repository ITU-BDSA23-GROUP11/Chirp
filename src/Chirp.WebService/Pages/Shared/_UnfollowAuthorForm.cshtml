@using Chirp.WebService.Extensions
@model Chirp.Core.Dto.CheepDto

@if (!User.GetUserLogin().Equals(Model.AuthorLogin))
{
    <form asp-controller="Cheep" asp-action="Unfollow" style="display:inline;">
        <input type="hidden" name="CheepAuthorLogin" value="@Model.AuthorLogin"/>
        <input name="__RequestVerificationToken" type="hidden"/>
        @Html.AntiForgeryToken()
        <button type="submit" style="background:none;border:none;color: purple;padding:0;margin-left: 10px;cursor:pointer">
            Unfollow @(Model.AuthorName ?? @Model.AuthorLogin)
        </button>
    </form>
}