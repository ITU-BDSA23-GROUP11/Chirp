@using Chirp.Core.Extensions

@{
    var rawUser = User.GetUser();
}
@if (rawUser is not null)
{
    var user = rawUser.GetUserNonNull();
    <div class="cheepbox">
        <h3>What's on your mind @(user.Name)?</h3>
        <form asp-controller="Cheep" asp-action="Create">
            <input style="float: left" type="text" name="cheepText" placeholder="This is a cheep...">
            <input type="submit" value="Share">
        </form>
    </div>
}